{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} [{{ .UserName }}]",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "template": "{{ if .Root }}Admin{{ else }}PS{{ end }} "
        },
        {
          "type": "path",
          "style": "plain",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 5,
            "folder_separator_icon": "\\",
            "folder_icon": "..",
            "hide_root_location": false,
            "mapped_locations_enabled": false
          },
          "template": "{{ .Path }}>"
        }
      ]
    }
  ]
}